<h2>User Details</h2>
<div class="card card-header results-block">
    <table class="col-md-12">
      <tbody>
      <tr>
        <td><strong>Name: </strong><%= @user.full_name %></td>
        <td><strong>Email:  </strong><%= @user.email %></td>
        <td><strong>Actions: </strong>
        <% if current_user.not_friends_with?(@user.id)%>
         <%= link_to 'Follow friend?', friendships_path(friend: @user) , class:"btn btn-sm btn-success",data:{"turbo-method": :post} %></td>
      <%else%>
        <span class="badge badge-secondary text-secondary">
          You are friends
        </span>
      <% end %>
    </tr>
  </tbody>
  </table>
  </div>
<% if !@tracked_stocks.empty? %>
  <%= render partial: 'stocks/list' %>
<% else%>
    <p class="lead">this user not tracking any stocks</p>
<% end %>
